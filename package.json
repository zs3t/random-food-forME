{
  "name": "random-food",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--no-deprecation' next dev -H 0.0.0.0 -p 9090",
    "build": "next build",
    "postbuild": "mkdir -p .next/standalone/.next && cp -r .next/static .next/standalone/.next/ && cp -r .next/server .next/standalone/.next/",
    "lint": "next lint",
    "start": "next start -H 127.0.0.1 -p 9090",
    "dev:all": "concurrently --names \"NEXT,API\" --prefix-colors \"cyan,green\" \"pnpm run dev\" \"pnpm run start-backend\"",
    "start-backend": "cd backend && node --no-deprecation index.js",
    "clean": "rm -rf .next node_modules/.cache",
    "check": "pnpm audit && pnpm run lint && pnpm exec tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-toast": "1.2.4",
    "@vercel/analytics": "latest",
    "better-sqlite3": "12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "latest",
    "lucide-react": "^0.454.0",
    "next": "^14.2.35",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.35",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "tailwindcss": "3.4.18",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": "4.1.1",
      "glob": ">=10.5.0"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}